# Coverage.py configuration file

[run]
# Source code to measure
source = src

# Files to omit from coverage
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */venv/*
    */virtualenv/*
    */.venv/*
    */site-packages/*

# Enable branch coverage
branch = True

# Parallel mode for multiprocessing
parallel = False

[report]
# Precision for coverage percentages
precision = 2

# Show lines that weren't executed
show_missing = True

# Don't skip covered files in report
skip_covered = False

# Don't skip empty files
skip_empty = False

# Sort report by coverage percentage
sort = Cover

# Lines to exclude from coverage
exclude_lines =
    # Standard pragma
    pragma: no cover
    
    # Don't complain about missing debug code
    def __repr__
    if self\.debug
    
    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError
    
    # Don't complain if non-runnable code isn't run
    if 0:
    if False:
    if __name__ == .__main__.:
    
    # Don't complain about abstract methods
    @abstractmethod
    @abc.abstractmethod
    
    # Don't complain about type checking blocks
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:
    
    # Don't complain about pass statements
    pass

[html]
# Directory for HTML report
directory = htmlcov

# Title for HTML report
title = RPM Dependency Graph Coverage Report

[xml]
# Output file for XML report
output = coverage.xml

[json]
# Output file for JSON report
output = coverage.json
